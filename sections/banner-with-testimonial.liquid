<section class="banner-with-testimonial">
  <div class="container-fluid">
    <div class="banner-testimonial">
      <ul class="banner-testi-ul">
        <li class="banner-testi-li offer-banner">
          <div class="banner-block">
            <a href="{{ section.settings.banner_url }}" class="banner-img">
              {%- if section.settings.banner_1_img -%}
              {{ section.settings.banner_1_img | image_url: width: 1080 | image_tag:
                loading: 'lazy',
                width: section.settings.banner_1_img.width,
                height: section.settings.banner_1_img.height,
                class: "img-fluid",
                alt: section.settings.banner_1_img.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </a>
            <div class="banner-content-block {% if section.settings.banner_1_text_position == 'left' %} banner-text-left{% elsif section.settings.banner_1_text_position == 'right' %} banner-text-right{% else %} banner-text-center{% endif %}{% if section.settings.banner_1_content_position == 'left' %} banner-content-left{% elsif section.settings.banner_1_content_position == 'right' %} banner-content-right{% else %} banner-content-center{% endif %}">
              {% if section.settings.banner_1_subtitle != '' %}
              <span class="subtitle" style="color: {{ section.settings.banner_1_subtitle_color }};">{{ section.settings.banner_1_subtitle }}</span>
              {% endif %}
              {% if section.settings.banner_1_title != '' %}
              <h2 class="title" style="color: {{ section.settings.banner_1_title_color }};">{{ section.settings.banner_1_title }}</h2>
              {% endif %}
              {% if section.settings.banner_1_btn_text != '' %}
              <a href="{{ section.settings.banner_1_url }}" class="banner-btn {% if section.settings.banner_1_button_style == 'btn-style1' %}btn-style{% elsif section.settings.banner_1_button_style == 'btn-style2' %}btn-style2{% elsif section.settings.banner_1_button_style == 'btn-style3' %}btn-style3{% else %}btn-style4{% endif %}">{{ section.settings.banner_1_btn_text }}</a>
              {% endif %}
            </div>
          </div>
        </li>
        <li class="banner-testi-li testimonial">
          <div class="testimonial-block">
            <div class="swiper" id="testimonial-{{ block.id }}">
              <div class="swiper-wrapper">
                {% for block in section.blocks %}
                <div class="swiper-slide">
                  <div class="testi-main">
                    <div class="testi-image">
                      {%- if block.settings.testi_image -%}
                      {{ block.settings.testi_image | image_url: width: 500 | image_tag:
                        loading: 'lazy',
                        width: block.settings.testi_image.width,
                        height: block.settings.testi_image.height,
                        class: "img-fluid",
                        alt: block.settings.testi_image.alt | escape }}
                      {%- else -%}
                      {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                      {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%} 
                    </div>
                    <div class="testi-content">
                      {% if block.settings.testi_desc != '' %}
                      <p class="desc">{{ block.settings.testi_desc }}</p>
                      {% endif %}
                      <span class="icon"><i class="ri-double-quotes-l"></i></span>
                      <div class="testi-author">
                        {% if block.settings.testi_author_name != '' %}
                        <span class="author-name">{{ block.settings.testi_author_name }} ~ </span>
                        {% endif %}
                        {% if block.settings.testi_author_label != '' %}
                        <span class="author-label">{{ block.settings.testi_author_label }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
                {%- endfor -%}
              </div>
            </div>
          </div>
        </li>
        <li class="banner-testi-li offer-banner">
          <div class="banner-block">
            <a href="{{ section.settings.banner_url }}" class="banner-img">
              {%- if section.settings.banner_2_img -%}
              {{ section.settings.banner_2_img | image_url: width: 1080 | image_tag:
                loading: 'lazy',
                width: section.settings.banner_2_img.width,
                height: section.settings.banner_2_img.height,
                class: "img-fluid",
                alt: section.settings.banner_2_img.alt | escape }}
              {%- else -%}
              {%- capture placeholder -%}collection-{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
              {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}</a>
            <div class="banner-content-block {% if section.settings.banner_2_text_position == 'left' %} banner-text-left{% elsif section.settings.banner_2_text_position == 'right' %} banner-text-right{% else %} banner-text-center{% endif %}{% if section.settings.banner_2_content_position == 'left' %} banner-content-left{% elsif section.settings.banner_2_content_position == 'right' %} banner-content-right{% else %} banner-content-center{% endif %}">
              {% if section.settings.banner_2_subtitle != '' %}
              <span class="subtitle" style="color: {{ section.settings.banner_2_subtitle_color }};">{{ section.settings.banner_2_subtitle }}</span>
              {% endif %}
              {% if section.settings.banner_2_title != '' %}
              <h2 class="title" style="color: {{ section.settings.banner_2_title_color }};">{{ section.settings.banner_2_title }}</h2>
              {% endif %}
              {% if section.settings.banner_2_btn_text != '' %}
              <a href="{{ section.settings.banner_2_url }}" class="banner-btn {% if section.settings.banner_2_button_style == 'btn-style1' %}btn-style{% elsif section.settings.banner_2_button_style == 'btn-style2' %}btn-style2{% elsif section.settings.banner_2_button_style == 'btn-style3' %}btn-style3{% else %}btn-style4{% endif %}">{{ section.settings.banner_2_btn_text }}</a>
              {% endif %}
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>
<script type="text/javascript">
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.swiper#testimonial-{{ block.id }}', {
      slidesPerView: 1,
      grid: {
        rows: 1,
        fill: 'row' | 'column',
      },
      spaceBetween: 0,
      observer: true,
      observeParents: true,
      watchSlidesProgress: true,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      navigation: {
        nextEl: '.swiper-next-{{ section.id }}',
        prevEl: '.swiper-prev-{{ section.id }}',
      },
      pagination: {
        el: ".swiper-pagination-{{ section.id }}",
        clickable: true
      },
      {% comment %} autoplay: {
        delay: 5000,
        disableOnInteraction: false,
        pauseOnMouseEnter: true
      }, {% endcomment %}
      breakpoints: {
        0: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        320: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        360: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        540: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        640: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 12
        },
        768: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1024: {
          slidesPerView: 2,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        },
        1199: {
          slidesPerView: 1,
          grid: {
            rows: 1,
            fill: 'row' | 'column',
          },
          spaceBetween: 30
        }
      }
    });
  });
</script>
