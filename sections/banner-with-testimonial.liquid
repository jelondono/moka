  {% endif %}
  margin-top: -30px;
}
.banner-with-testimonial .banner-testimonial ul.banner-testi-ul li.banner-testi-li {
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
  margin-top: 30px;
}
.banner-with-testimonial .banner-testimonial ul.banner-testi-ul li.banner-testi-li.offer-banner,
.banner-with-testimonial .banner-testimonial ul.banner-testi-ul li.banner-testi-li.testimonial {
